generator client {
  provider = "prisma-client-js"
}

// Uses DATABASE_URL environment variable
// Local: set to "file:./dev.db" with provider "sqlite"
// Production: set to PostgreSQL connection string
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PatientAssessment {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Patient Information
  patientInfo       String   // JSON: firstName, lastName, email, phone, dob, address, gender
  
  // Medical History
  medicalHistory    String   // JSON: conditions, surgeries, allergies, etc.
  
  // Medication History
  medications       String   // JSON: current medications, supplements
  
  // Sexual Health
  sexualHealth      String   // JSON: concerns, frequency, ED history, etc.
  
  // Contraindication Screening
  contraindications String   // JSON: nitrates, BP, cardiac, etc.
  
  // PT-141 Specific Questions
  pt141Section      String   // JSON: PT-141 specific screening
  
  // Oxytocin Specific Questions
  oxytocinSection   String   // JSON: Oxytocin specific screening
  
  // Consent
  consentSigned     Boolean  @default(false)
  signatureData     String?  // Base64 signature image
  consentTimestamp  DateTime?
  
  // Risk Assessment
  riskFlags         String   // JSON array of risk flags
  isAutoDisqualified Boolean @default(false)
  requiresReview    Boolean  @default(true)
  
  // Status & Tracking
  status            String   @default("pending") // pending, approved, denied, shipped
  ipAddress         String?
  userAgent         String?
  
  // Physician Decision
  physicianId       String?
  physician         Physician? @relation(fields: [physicianId], references: [id])
  physicianNotes    String?
  denialReason      String?
  decisionTimestamp DateTime?
  
  // Fulfillment
  shippedAt         DateTime?
  trackingNumber    String?
  
  // Payment tracking
  reviewPayment     ReviewPayment?
  
  @@index([status])
  @@index([createdAt])
}

model Physician {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  name         String
  email        String   @unique
  passwordHash String
  role         String   @default("physician") // physician, admin
  isActive     Boolean  @default(true)
  
  // Registration & Approval
  status         String   @default("pending") // pending, approved, denied
  licenseNumber  String?
  approvedAt     DateTime?
  approvedById   String?
  approvedBy     Physician? @relation("ApprovedBy", fields: [approvedById], references: [id])
  approvedDoctors Physician[] @relation("ApprovedBy")
  
  // Payment Settings
  feePerReview   Float    @default(0) // Amount earned per review
  
  // Audit
  lastLoginAt  DateTime?
  
  assessments  PatientAssessment[]
  auditLogs    AuditLog[]
  reviewPayments ReviewPayment[]
  payoutCycles   PayoutCycle[]
}

model AuditLog {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  
  action      String   // login, approve, deny, view, ship
  entityType  String   // assessment, physician
  entityId    String?
  details     String?  // JSON additional details
  ipAddress   String?
  
  physicianId String
  physician   Physician @relation(fields: [physicianId], references: [id])
  
  @@index([physicianId])
  @@index([createdAt])
}

// Payment tracking for physician reviews
model ReviewPayment {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  
  // Link to assessment
  assessmentId  String   @unique
  assessment    PatientAssessment @relation(fields: [assessmentId], references: [id])
  
  // Link to physician who did the review
  physicianId   String
  physician     Physician @relation(fields: [physicianId], references: [id])
  
  // Payment details
  amount        Float    // Amount earned for this review
  decision      String   // approved, denied
  
  // Payout cycle tracking
  cycleId       String?
  cycle         PayoutCycle? @relation(fields: [cycleId], references: [id])
  isPaid        Boolean  @default(false)
  paidAt        DateTime?
  
  @@index([physicianId])
  @@index([cycleId])
  @@index([createdAt])
}

// Weekly/Monthly payout cycles
model PayoutCycle {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  
  // Cycle period
  startDate     DateTime
  endDate       DateTime
  cycleType     String   // weekly, monthly
  
  // Physician this cycle belongs to
  physicianId   String
  physician     Physician @relation(fields: [physicianId], references: [id])
  
  // Totals
  totalReviews  Int      @default(0)
  totalAmount   Float    @default(0)
  
  // Status
  status        String   @default("open") // open, closed, paid
  paidAt        DateTime?
  paidBy        String?  // Admin who marked as paid
  paymentNotes  String?
  
  payments      ReviewPayment[]
  
  @@index([physicianId])
  @@index([status])
  @@index([startDate])
}

// System-wide settings
model SystemSettings {
  id                  String   @id @default("system")
  updatedAt           DateTime @updatedAt
  
  defaultFeePerReview Float    @default(5.00)
  payoutCycleType     String   @default("weekly") // weekly, monthly
}

